<%= turbo_stream.remove(@card) %>

<% if @cards_count.zero?  %>
  <%=  turbo_stream.append("workspace_#{@workspace.id}_board_#{@board.id}_cards") do %>
    <%= render partial: 'cards/no_cards', locals: { board_id: @board.id} %>
  <% end %>
<% end %>

<%= turbo_stream.append(:toasts) do %>
  <%= render 'shared/toast', title: 'Card', toast_class: toast_add do %>
    <p>Excluido com sucesso!</p>
  <% end %>
<% end %>