<%= turbo_stream.append("workspace_#{@workspace.id}_board_#{@board.id}_cards",
                         partial: "cards/card",
                         locals: { card: @card }) %>

<%= turbo_stream.remove("board_#{@board.id}_no_cards") %>

<%= turbo_stream.append(:toasts) do %>
  <%= render 'shared/toast', title: 'Card', toast_class: toast_add do %>
    <p>Criado com sucesso!</p>
  <% end %>
<% end %>