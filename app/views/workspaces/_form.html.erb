<%= form_with(model: workspace) do |form| %>
  <div class="form-group">
    <% if workspace.errors.any? %>
      <ul class="list-group">
        <% workspace.errors.full_messages.each do |message| %>
          <li class="list-group-item list-group-item-danger"><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-between mt-5">
    <%= form.submit nil, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Cancel', '#', data: { action: 'modal#hideBeforeRender'}, class: 'btn btn-sm btn-danger' %>
  </div>
<% end %>

