<%= turbo_stream.remove(@workspace) %>

<% if @workspaces_count.zero? %>
  <%= turbo_stream.append(:workspaces, partial: 'workspaces/no_workspaces') %>
<% end %>

<%= turbo_stream.append(:toasts) do %>
  <%= render 'shared/toast', title: 'Workspace', toast_class: toast_add do %>
    <p>Excluido com sucesso!</p>
  <% end %>
<% end %>
