<%= turbo_stream.append(:workspaces,
                        partial: 'workspaces/workspace',
                        locals: { workspace: @workspace }
                        ) %>
<%= turbo_stream.remove(:no_workspaces) %>

<%= turbo_stream.append(:toasts) do %>
  <%= render 'shared/toast', title: 'Workspace', toast_class: toast_add do %>
    <p>Criado com sucesso!</p>
  <% end %>
<% end %>